{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [ "ES2020" ],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "src/",
    "test/"
  ]
}
  